<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:background="@drawable/customborder"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/comment_IMG_user"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/comment_IMG_star1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:src = "@drawable/ic_star"/>
                    <ImageView
                        android:id="@+id/comment_IMG_star2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:src = "@drawable/ic_star"/>
                    <ImageView
                        android:id="@+id/comment_IMG_star3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:src = "@drawable/ic_star"/>
                    <ImageView
                        android:id="@+id/comment_IMG_star4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:src = "@drawable/ic_star"/>
                    <ImageView
                        android:id="@+id/comment_IMG_star5"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:src = "@drawable/ic_star"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/comment_LBL_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:layout_marginEnd="12dp"
                        android:textColor="#0B0909"
                        android:fontFamily="@font/arimafont"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="16sp" />
                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comment_TXT_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="this is the comment"
                    android:fontFamily="@font/arimafont"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="12sp"
                    />


            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
